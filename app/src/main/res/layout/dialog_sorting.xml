<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_bottom_sheet_dialog">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정렬"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:paddingLeft="24dp"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RadioButton
                android:id="@+id/rb_sort_by_name_asc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름(가나다순)" />

            <RadioButton
                android:id="@+id/rb_sort_by_name_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름(가나다 역순)" />

            <RadioButton
                android:id="@+id/rb_sort_by_date_asc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜(오름차순)" />

            <RadioButton
                android:id="@+id/rb_sort_by_date_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜(내림차순)" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date_time_picker_cancel"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="취소"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/tv_date_time_picker_save"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="완료"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</layout>